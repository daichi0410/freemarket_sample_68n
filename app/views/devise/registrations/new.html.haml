    %br/
    = f.text_field :j_last_name, autocomplete: "j_last_name"  

  .field
    = f.label :生年月日（年）
    %br/
    = f.text_field :birthday_year, autocomplete: ":birthday_year"  

  .field
    = f.label :生年月日（月）
    %br/
    = f.text_field :birthday_month, autocomplete: ":birthday_month"  

  .field
    = f.label :生年月日（日）
    %br/
    = f.text_field :birthday_day, autocomplete: ":birthday_day"  

  .field
    = f.label :email（＠とドメイン名は必須）
    %br/
    = f.email_field :email, autocomplete: "email"
  .field
    = f.label :password
    - if @minimum_password_length
      %em (最低７文字以上)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"

  
