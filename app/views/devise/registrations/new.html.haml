%h2 ユーザー情報登録
= form_for(@user, url: user_registration_path) do |f|
  = render "devise/shared/error_messages", resource: @user
  .field
    = f.label :ニックネーム
    %br/
    = f.text_field :nickname, autofocus: true,autocomplete: "nickname"

  .field
    = f.label :漢字氏名（苗字） 
    %br/
    = f.text_field :family_name, autocomplete: "family_name"  

  .field
    = f.label :漢字氏名（名前）
    %br/
    = f.text_field :last_name, autocomplete: "last_name"  

  .field
    = f.label :ふりがな氏名（苗字）
    %br/
    = f.text_field :j_family_name, autocomplete: "j_family_name"  

